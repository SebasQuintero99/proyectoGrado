<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Clases</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="/css/schedule.css">
</head>
<body>
    <div class="container-fluid py-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>Gestión de Clases
                </h4>
                <div class="d-flex justify-content-end mb-3">
                    <% if (permittedRoutes.includes('/classes/add')) { %>
                        <button type="button" id="addClassBtn" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#classModal">
                            <i class="fas fa-plus me-2"></i>Agregar Clase
                        </button>
                    <% } %>
                </div>
            </div>
            <div class="card-body">
                <!-- Mensaje de error (opcional) -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <!-- Filtros (Laboratorio) -->
                <form method="GET" action="/classes" id="filterForm" class="mb-4">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="id_laboratorio" class="form-label">Laboratorio</label>
                            <select name="selectedLaboratory" id="id_laboratorio" class="form-select w-50" onchange="document.getElementById('filterForm').submit()" required>
                                <option value="">Seleccione un laboratorio</option>
                                <% laboratories.forEach(lab => { %>
                                    <option value="<%= lab.id_laboratorio %>" <%= selectedLaboratory == lab.id_laboratorio ? 'selected' : '' %>>
                                        <%= lab.nombre %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </form>

                <!-- Botón de Agregar Clase se movió al encabezado de la tarjeta -->

                <!-- Tabla de Clases -->
                <div class="table-responsive">
                    <table id="classes" class="table table-bordered text-center classes-table">
                        <thead class="table-light">
                            <tr>
                                <th class="hour-column">Horas</th>
                                <th>Lunes</th>
                                <th>Martes</th>
                                <th>Miércoles</th>
                                <th>Jueves</th>
                                <th>Viernes</th>
                                <th>Sábado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                                const horarios = [...new Set(classes.map(classItem => classItem.hora_inicio))].sort();
                                horarios.forEach(hora => { 
                            %>
                                <tr>
                                    <td class="hour-column"><%= hora %></td>
                                    <% ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'].forEach(dia => { 
                                        const clase = classes.find(classItem => 
                                            classItem.hora_inicio <= hora && classItem.hora_fin > hora && classItem.dia_semana === dia
                                        );

                                        if (clase) { %>
                                            <td class="day-column p-1">
                                                <div class="class-card" style="--class-color: <%= clase.asignatura_color || '#f0f0f0' %>;">
                                                    <div class="class-card-header">
                                                        <% if (permittedRoutes.includes('/classes/update')) { %>
                                                            <button type="button" class="btn btn-primary btn-sm edit-class-btn" 
                                                                    onclick="editClass(this)"
                                                                    data-id="<%= clase.id_clase %>" 
                                                                    data-id-asignatura="<%= clase.id_asignatura %>"
                                                                    data-semestre="<%= clase.semestre %>"
                                                                    data-dia-semana="<%= clase.dia_semana %>"
                                                                    data-hora-inicio="<%= clase.hora_inicio %>"
                                                                    data-hora-fin="<%= clase.hora_fin %>">
                                                                <i class="fa-solid fa-pen-to-square"></i>
                                                            </button>
                                                        <% } %>
                                                        <% if (permittedRoutes.includes('/classes/delete')) { %>
                                                            <button 
                                                                class="btn btn-danger btn-sm delete-btn ms-1" 
                                                                data-id="<%= clase.id_clase %>" 
                                                                data-entity="classes">
                                                                <i class="fa-solid fa-trash"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                    <div class="class-card-body">
                                                        <strong><%= clase.asignatura_nombre %></strong>
                                                        <small><strong>Curso:</strong> <%= clase.numero_curso %></small>
                                                        <small><strong>Grupo:</strong> <%= clase.grupo %></small>
                                                        <small><strong>Docente:</strong> <%= clase.docente_nombre || 'N/A' %></small>
                                                        <small><strong>Horario:</strong> <%= clase.hora_inicio %> - <%= clase.hora_fin %></small>
                                                    </div>
                                                </div>
                                            </td>
                                        <% } else { %>
                                            <td class="day-column empty-cell">Sin Asignar</td>
                                        <% } 
                                    }); %>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

<!-- Modal para Agregar/Editar Clase -->
<div class="modal fade" id="classModal" tabindex="-1" aria-labelledby="classModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="classModalLabel">Agregar Clase</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="classForm" action="/classes/add" method="POST">
                    <input type="hidden" name="id_clase" id="id_clase">
                    
                    <div class="mb-3">
                        <label for="id_laboratorio" class="form-label">Laboratorio</label>
                        <select name="id_laboratorio" id="id_laboratorio" class="form-select" required>
                            <option value="">Seleccione un laboratorio</option>
                            <% laboratories.forEach(lab => { %>
                                <option value="<%= lab.id_laboratorio %>" <%= selectedLaboratory == lab.id_laboratorio ? 'selected' : '' %>>
                                    <%= lab.nombre %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="id_asignatura" class="form-label">Asignatura</label>
                        <select name="id_asignatura" id="id_asignatura" class="form-select" required>
                            <option value="">Seleccione una asignatura</option>
                            <% subjects.forEach(subject => { %>
                                <option value="<%= subject.id_asignatura %>">
                                    <%= subject.nombre %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="dia_semana" class="form-label">Día de la Semana</label>
                        <select name="dia_semana" id="dia_semana" class="form-select" required>
                            <option value="">Seleccione un día</option>
                            <option value="Lunes">Lunes</option>
                            <option value="Martes">Martes</option>
                            <option value="Miércoles">Miércoles</option>
                            <option value="Jueves">Jueves</option>
                            <option value="Viernes">Viernes</option>
                            <option value="Sábado">Sábado</option>
                        </select>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="hora_inicio" class="form-label">Hora de Inicio</label>
                            <input type="time" name="hora_inicio" id="hora_inicio" class="form-control" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="hora_fin" class="form-label">Hora de Fin</label>
                            <input type="time" name="hora_fin" id="hora_fin" class="form-control" required>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Función para manejar la edición de clase
    function editClass(button) {
        const $button = $(button);
        const id = $button.data('id');
        const idAsignatura = $button.data('id-asignatura');
        const idLaboratorio = $button.data('id-laboratorio');
        const diaSemana = $button.data('dia-semana');
        const horaInicio = $button.data('hora-inicio');
        const horaFin = $button.data('hora-fin');
        
        console.log('Editando clase:', { id, idAsignatura, idLaboratorio, diaSemana, horaInicio, horaFin });
        
        // Llenar el formulario con los datos de la clase
        $('#classForm').attr('action', '/classes/update');
        $('#classModalLabel').text('Editar Clase');
        $('#id_clase').val(id);
        $('#id_laboratorio').val(idLaboratorio);
        $('#id_asignatura').val(idAsignatura);
        $('#dia_semana').val(diaSemana);
        $('#hora_inicio').val(horaInicio);
        $('#hora_fin').val(horaFin);
        
        // Mostrar el modal
        const modal = new bootstrap.Modal(document.getElementById('classModal'));
        modal.show();
    }

    // Manejar cambio de semestre en el filtro
    document.getElementById('selectedSemester').addEventListener('change', function() {
        const semester = this.value;
        const urlParams = new URLSearchParams(window.location.search);
        
        if (semester) {
            urlParams.set('selectedSemester', semester);
        } else {
            urlParams.delete('selectedSemester');
        }

        window.location.search = urlParams.toString();
    });

    // Inicializar DataTable y eventos del modal
    $(document).ready(function() {
        // Inicializar DataTable
        var table = $('#classes').DataTable({
            layout: {
                top: "lBfrtip",
                bottom: "ip"
            },
            buttons: [
                {
                    extend: 'excelHtml5',
                    text: '<i class="fas fa-file-excel"></i> Excel',
                    titleAttr: 'Exportar a Excel',
                    className: 'btn btn-success btn-sm me-1'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fas fa-file-pdf"></i> PDF',
                    titleAttr: 'Exportar a PDF',
                    className: 'btn btn-danger btn-sm me-1'
                },
                {
                    extend: 'print',
                    text: '<i class="fas fa-print"></i> Imprimir',
                    titleAttr: 'Imprimir',
                    className: 'btn btn-primary btn-sm'
                }
            ],
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-MX.json'
            },
            pageLength: 25,
            responsive: true,
            order: [[0, 'asc']]
        });

        // Limpiar el formulario cuando se cierre el modal
        $('#classModal').on('hidden.bs.modal', function () {
            $('#classForm')[0].reset();
            $('#classForm').attr('action', '/classes/add');
            $('#classModalLabel').text('Agregar Clase');
            $('#id_clase').val('');
        });

        // Manejar clic en el botón de agregar clase
        $('#addClassBtn').on('click', function() {
            $('#classForm')[0].reset();
            $('#classForm').attr('action', '/classes/add');
            $('#classModalLabel').text('Agregar Clase');
            $('#id_clase').val('');
        });

        // Validación antes de enviar el formulario
        $('#classForm').on('submit', function(e) {
            const idLaboratorio = $('#id_laboratorio').val();
            const idAsignatura = $('#id_asignatura').val();
            const diaSemana = $('#dia_semana').val();
            const horaInicio = $('#hora_inicio').val();
            const horaFin = $('#hora_fin').val();

            if (!idLaboratorio || !idAsignatura || !diaSemana || !horaInicio || !horaFin) {
                e.preventDefault();
                alert('Todos los campos son obligatorios.');
                return;
            }

            if (horaInicio >= horaFin) {
                e.preventDefault();
                alert('La hora de inicio debe ser anterior a la hora de fin.');
                return;
            }
        });
    });
</script>
</body>
</html>