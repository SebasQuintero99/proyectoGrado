<div class="card shadow-sm mb-4">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fas fa-flask me-2"></i>Gestión de Laboratorios
        </h4>
        <% if (permittedRoutes.includes('/laboratories/add')) { %>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#laboratoryModal" id="addLaboratoryBtn">
                <i class="fas fa-plus me-1"></i> Agregar
            </button>
        <% } %>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="laboratories" class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#</th>
                        <th>Nombre</th>
                        <th class="text-center">Capacidad</th>
                        <th>Docente a Cargo</th>
                        <% if (permittedRoutes.includes('/laboratories/update') || permittedRoutes.includes('/laboratories/delete')) { %>
                            <th class="text-center">Acciones</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="laboratories-table-body">
                    <% laboratories.forEach((laboratory, index) => { %>
                    <tr>
                        <td class="text-center"><%= index + 1 %></td>
                        <td><%= laboratory.nombre %></td>
                        <td class="text-center"><%= laboratory.capacidad %></td>
                        <td><%= laboratory.docente_nombre %></td>
                        <% if (permittedRoutes.includes('/laboratories/update') || permittedRoutes.includes('/laboratories/delete')) { %>
                            <td class="text-center">
                                <% if (permittedRoutes.includes('/laboratories/update')) { %>
                                    <button type="button" class="btn btn-primary btn-sm edit-btn" data-bs-toggle="modal" data-bs-target="#laboratoryModal" data-id="<%= laboratory.id_laboratorio %>">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                <% } %>
                                <% if (permittedRoutes.includes('/laboratories/delete')) { %>
                                    <button class="btn btn-danger btn-sm delete-btn" data-id="<%= laboratory.id_laboratorio %>" data-entity="laboratories">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                <% } %>
                            </td>
                        <% } %>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para Agregar/Editar Laboratorio -->
<div class="modal fade" id="laboratoryModal" tabindex="-1" aria-labelledby="laboratoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="laboratoryModalLabel">Agregar Laboratorio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="laboratoryForm" method="POST">
                    <input type="hidden" name="id_laboratorio" id="id_laboratorio">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del Laboratorio</label>
                        <input type="text" name="nombre" id="nombre" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="capacidad" class="form-label">Capacidad</label>
                        <input type="number" name="capacidad" id="capacidad" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="id_docente" class="form-label">Docente a Cargo</label>
                        <select name="id_docente" id="id_docente" class="form-select" required>
                            <option value="" disabled>Seleccione un docente</option>
                            <% teachers.forEach(teacher => { %>
                                <option value="<%= teacher.id_docente %>"><%= teacher.nombre %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times me-1"></i>Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="submitButton"><i class="fas fa-save me-1"></i>Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    new DataTable('#laboratories', {
        layout: {
            topStart: {
                buttons: [
                    { extend: 'excelHtml5', text: '<i class="fas fa-file-excel"></i> Excel', titleAttr: 'Exportar a Excel', className: 'btn btn-success' },
                    { extend: 'pdfHtml5', text: '<i class="fas fa-file-pdf"></i> PDF', titleAttr: 'Exportar a PDF', className: 'btn btn-danger' }
                ]
            }
        },
        language: { 
            url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json' 
        }
    });

document.addEventListener('DOMContentLoaded', function () {
    const laboratoryModal = document.getElementById('laboratoryModal');
    const laboratoryForm = document.getElementById('laboratoryForm');
    const modalTitle = document.getElementById('laboratoryModalLabel');
    const submitButton = document.getElementById('submitButton');
    const hiddenIdInput = document.getElementById('id_laboratorio');

    const setupAddForm = () => {
        laboratoryForm.reset();
        laboratoryForm.action = '/laboratories/add';
        modalTitle.textContent = 'Agregar Laboratorio';
        submitButton.innerHTML = '<i class="fas fa-plus me-1"></i> Agregar';
        submitButton.className = 'btn btn-success';
        hiddenIdInput.value = '';
        document.getElementById('id_docente').value = ''; // Reset select
    };

    document.getElementById('addLaboratoryBtn')?.addEventListener('click', setupAddForm);

    $('#laboratories').on('click', '.edit-btn', async function () {
        const labId = $(this).data('id');

        laboratoryForm.reset();
        laboratoryForm.action = '/laboratories/update';
        modalTitle.textContent = 'Editar Laboratorio';
        submitButton.innerHTML = '<i class="fas fa-save me-1"></i> Actualizar';
        submitButton.className = 'btn btn-warning';
        hiddenIdInput.value = labId;

        try {
            const response = await fetch(`/api/laboratories/${labId}`, {
                headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
            });
            if (!response.ok) throw new Error('Error al cargar datos del laboratorio.');

            const data = await response.json();
            document.getElementById('nombre').value = data.nombre;
            document.getElementById('capacidad').value = data.capacidad;
            document.getElementById('id_docente').value = data.id_docente;

        } catch (error) {
            console.error('Error:', error);
            Swal.fire('Error', 'No se pudieron cargar los datos para editar.', 'error');
        }
    });

    laboratoryForm.addEventListener('submit', function (event) {
        event.preventDefault();
        const isUpdate = !!hiddenIdInput.value;
        Swal.fire({
            title: isUpdate ? '¡Actualizado!' : '¡Agregado!',
            text: `El laboratorio ha sido ${isUpdate ? 'actualizado' : 'agregado'}.`,
            icon: 'success',
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false
        }).then(() => laboratoryForm.submit());
    });
});
</script>
