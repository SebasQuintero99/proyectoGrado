<!-- En el head -->
<link rel="stylesheet" href="/css/home.css">

<div class="container home-container mt-4">
    <!-- Sección de bienvenida -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://www.usco.edu.co/imagen-institucional/ocre/universidad-surcolombiana.png" alt="Logo Universidad" style="height: 80px;" class="mb-3">
                        <h2 class="card-title mb-3 text-dark-custom">Bienvenido al Sistema de Asignación de Laboratorios</h2>
                        <p class="lead mb-0 text-dark-custom">Sistema de gestión académica de la Universidad Surcolombiana</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3 text-center text-dark-custom">Desafíos actuales</h5>
                            <div class="d-flex mb-3" style="justify-content: center;">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-clock fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-center text-dark-custom">Cruce de horarios</h6>
                                    <p class="mb-0 small text-dark-custom">Conflictos entre asignaturas del mismo semestre.</p>
                                </div>
                            </div>
                            <div class="d-flex mb-3" style="justify-content: center;">
                                <div class="me-3 text-danger">
                                    <i class="fas fa-tools fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-center text-dark-custom">Asignación ineficiente</h6>
                                    <p class="mb-0 small text-dark-custom">Proceso manual que requiere demasiado tiempo y esfuerzo.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3 text-center text-dark-custom">Nuestras soluciones</h5>
                            <div class="d-flex mb-3" style="justify-content: center;">
                                <div class="me-3 text-success">
                                    <i class="fas fa-robot fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-center text-dark-custom">Automatización</h6>
                                    <p class="mb-0 small text-dark-custom">Asignación automática de laboratorios.</p>
                                </div>
                            </div>
                            <div class="d-flex" style="justify-content: center;">
                                <div class="me-3 text-info">
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-center text-dark-custom">Optimización</h6>
                                    <p class="mb-0 small text-dark-custom">Uso eficiente de los recursos disponibles.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <a href="/classes" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 card-hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-25 p-3 me-3 icon-circle">
                            <i class="fas fa-chalkboard-teacher text-primary fs-3"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-dark-custom">Clases</h6>
                            <h3 class="mb-0 text-dark-custom" id="total-clases"><%= stats.totalClases %></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a href="/signatures" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 card-hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-danger bg-opacity-25 p-3 me-3 icon-circle">
                            <i class="fas fa-book text-danger fs-3"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-dark-custom">Asignaturas</h6>
                            <h3 class="mb-0 text-dark-custom" id="total-asignaturas"><%= stats.totalAsignaturas %></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a href="/teachers" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 card-hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-warning bg-opacity-25 p-3 me-3 icon-circle">
                            <i class="fas fa-chalkboard-teacher text-warning fs-3"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-dark-custom">Docentes</h6>
                            <h3 class="mb-0 text-dark-custom" id="total-docentes"><%= stats.totalDocentes %></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a href="/laboratories" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 card-hover-effect">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle bg-success bg-opacity-25 p-3 me-3 icon-circle">
                            <i class="fas fa-laptop-code text-success fs-3"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-dark-custom">Laboratorios</h6>
                            <h3 class="mb-0 text-dark-custom" id="total-laboratorios"><%= stats.totalLaboratorios %></h3>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-4">
        <!-- Gráfico de barras - Clases por día -->
        <div class="col-md-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0 text-dark-custom">Distribución de Clases por Día</h5>
                    <p class="text-muted small mb-0 text-dark-custom">Cantidad de clases programadas por día de la semana</p>
                </div>
                <div class="card-body">
                    <canvas id="clasesPorDiaChart" height="300"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Gráfico de dona - Uso de laboratorios -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0 text-dark-custom">Uso de Laboratorios</h5>
                    <p class="text-muted small mb-0 text-dark-custom">Distribución de clases por tipo de laboratorio</p>
                </div>
                <div class="card-body d-flex align-items-center">
                    <canvas id="usoLaboratoriosChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

