<div class="container mt-4">
    <!-- Tarjetas de estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <i class="fas fa-chalkboard-teacher text-primary fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Clases</h6>
                        <h3 class="mb-0" id="total-clases"><%= stats.totalClases %></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                        <i class="fas fa-book text-danger fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Asignaturas</h6>
                        <h3 class="mb-0" id="total-asignaturas"><%= stats.totalAsignaturas %></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                        <i class="fas fa-chalkboard-teacher text-warning fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Docentes</h6>
                        <h3 class="mb-0" id="total-docentes"><%= stats.totalDocentes %></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <i class="fas fa-laptop-code text-success fs-3"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Laboratorios</h6>
                        <h3 class="mb-0" id="total-laboratorios"><%= stats.totalLaboratorios %></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-4">
        <!-- Gráfico de barras - Clases por día -->
        <div class="col-md-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">Distribución de Clases por Día</h5>
                    <p class="text-muted small mb-0">Cantidad de clases programadas por día de la semana</p>
                </div>
                <div class="card-body">
                    <canvas id="clasesPorDiaChart" height="300"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Gráfico de dona - Uso de laboratorios -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">Uso de Laboratorios</h5>
                    <p class="text-muted small mb-0">Distribución de clases por tipo de laboratorio</p>
                </div>
                <div class="card-body d-flex align-items-center">
                    <canvas id="usoLaboratoriosChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de bienvenida -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://www.usco.edu.co/imagen-institucional/ocre/universidad-surcolombiana.png" alt="Logo Universidad" style="height: 80px;" class="mb-3">
                        <h2 class="card-title mb-3">Bienvenido al Sistema de Asignación de Laboratorios</h2>
                        <p class="lead text-muted">Sistema de gestión académica de la Universidad Surcolombiana</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="mb-3">Desafíos actuales</h5>
                            <div class="d-flex mb-3">
                                <div class="me-3 text-primary">
                                    <i class="fas fa-clock fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Cruce de horarios</h6>
                                    <p class="text-muted small mb-0">Conflictos entre asignaturas del mismo semestre.</p>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <div class="me-3 text-danger">
                                    <i class="fas fa-tools fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Asignación ineficiente</h6>
                                    <p class="text-muted small mb-0">Proceso manual que requiere demasiado tiempo y esfuerzo.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Nuestras soluciones</h5>
                            <div class="d-flex mb-3">
                                <div class="me-3 text-success">
                                    <i class="fas fa-robot fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Automatización</h6>
                                    <p class="text-muted small mb-0">Asignación automática de laboratorios.</p>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="me-3 text-info">
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Optimización</h6>
                                    <p class="text-muted small mb-0">Uso eficiente de los recursos disponibles.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script para los gráficos -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Colores para los gráficos
    const colors = {
        primary: '#4e73df',
        success: '#1cc88a',
        info: '#36b9cc',
        warning: '#f6c23e',
        danger: '#e74a3b',
        secondary: '#858796',
        light: '#f8f9fc',
        dark: '#5a5c69'
    };

    // Gráfico de barras - Clases por día
    const ctxBar = document.getElementById('clasesPorDiaChart').getContext('2d');
    new Chart(ctxBar, {
        type: 'bar',
        data: {
            labels: ['Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
            datasets: [{
                label: 'Número de Clases',
                data: [12, 19, 15, 17, 14, 5], // Datos de ejemplo
                backgroundColor: [
                    colors.primary,
                    colors.success,
                    colors.info,
                    colors.warning,
                    colors.danger,
                    colors.secondary
                ],
                borderColor: [
                    colors.primary,
                    colors.success,
                    colors.info,
                    colors.warning,
                    colors.danger,
                    colors.secondary
                ],
                borderWidth: 1,
                borderRadius: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: colors.dark,
                    titleFont: {
                        size: 14,
                        weight: 'bold'
                    },
                    bodyFont: {
                        size: 14
                    },
                    padding: 12,
                    displayColors: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        display: true,
                        color: 'rgba(0, 0, 0, 0.05)'
                    },
                    ticks: {
                        stepSize: 5
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });

    // Gráfico de dona - Uso de laboratorios
    const ctxDoughnut = document.getElementById('usoLaboratoriosChart').getContext('2d');
    new Chart(ctxDoughnut, {
        type: 'doughnut',
        data: {
            labels: ['Laboratorio 1', 'Laboratorio 2', 'Laboratorio 3', 'Laboratorio 4', 'Otros'],
            datasets: [{
                data: [30, 25, 20, 15, 10], // Datos de ejemplo
                backgroundColor: [
                    colors.primary,
                    colors.success,
                    colors.info,
                    colors.warning,
                    colors.secondary
                ],
                borderWidth: 0,
                hoverOffset: 10
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '70%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 20,
                        usePointStyle: true,
                        pointStyle: 'circle',
                        font: {
                            size: 11
                        }
                    }
                },
                tooltip: {
                    backgroundColor: colors.dark,
                    titleFont: {
                        size: 13,
                        weight: 'bold'
                    },
                    bodyFont: {
                        size: 13
                    },
                    padding: 12,
                    displayColors: false,
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.raw || 0;
                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                            const percentage = Math.round((value / total) * 100);
                            return `${label}: ${value} (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });
});
</script>

