<div>
    <h1>Gesti贸n de Asignaturas</h1>

    <!-- Mensaje de error -->
    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- Formulario de Agregar/Editar Asignatura -->
    <form action="<%= signatureToEdit ? '/signatures/update' : '/signatures/add' %>" method="POST" class="mb-4">
        <% if (signatureToEdit) { %>
            <input type="hidden" name="id_asignatura" value="<%= signatureToEdit.id_asignatura %>">
        <% } %>
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input 
                type="text" 
                name="nombre" 
                class="form-control w-50" 
                placeholder="Nombre de la asignatura" 
                value="<%= signatureToEdit ? signatureToEdit.nombre : '' %>" 
                required>
        </div>
        <div class="mb-3">
            <label for="codigo_materia" class="form-label">C贸digo Materia</label>
            <input 
                type="text" 
                name="codigo_materia" 
                class="form-control w-50" 
                placeholder="C贸digo de la materia" 
                value="<%= signatureToEdit ? signatureToEdit.codigo_materia : '' %>" 
                required>
        </div>
        <div class="mb-3">
            <label for="semestre" class="form-label">Semestre</label>
            <select name="semestre" class="form-select w-25" required>
                <% for (let i = 1; i <= 10; i++) { %>
                    <option value="<%= i %>" <%= signatureToEdit && signatureToEdit.semestre == i ? 'selected' : '' %>><%= i %></option>
                <% } %>
            </select>
        </div>
        <div class="mb-3">
            <label for="id_docente" class="form-label">Docente</label>
            <select name="id_docente" class="form-select w-50" required>
                <option value="">Seleccione un docente</option>
                <% teachers.forEach(teacher => { %>
                    <option value="<%= teacher.id_docente %>" <%= signatureToEdit && signatureToEdit.id_docente == teacher.id_docente ? 'selected' : '' %>>
                        <%= teacher.nombre %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label for="id_programa" class="form-label">Programa</label>
            <select name="id_programa" class="form-select w-50" required>
                <option value="">Seleccione un programa</option>
                <% programs.forEach(program => { %>
                    <option value="<%= program.id_programa %>" <%= signatureToEdit && signatureToEdit.id_programa == program.id_programa ? 'selected' : '' %>>
                        <%= program.nombre_programa %>
                    </option>
                <% }) %>
            </select>
        </div>
        <button type="submit" class="btn <%= signatureToEdit ? 'btn-warning' : 'btn-success' %>">
            <%= signatureToEdit ? 'Actualizar' : 'Agregar' %>
        </button>
        <% if (signatureToEdit) { %>
            <a href="/signatures" class="btn btn-secondary mt-2">Cancelar</a>
        <% } %>
    </form>

    <!-- Tabla de Asignaturas -->
    <table id="signatures" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>C贸digo Materia</th>
                <th>Semestre</th>
                <th>Docente</th>
                <th>Programa</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% signatures.forEach((signature, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= signature.nombre %></td>
                <td><%= signature.codigo_materia %></td>
                <td><%= signature.semestre %></td>
                <td><%= signature.docente_nombre || 'No asignado' %></td>
                <td><%= signature.nombre_programa || 'No asignado' %></td>
                <td>
                    <a href="/signatures?editId=<%= signature.id_asignatura %>" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <button 
                    class="btn btn-danger btn-sm delete-btn" 
                    data-id="<%= signature.id_asignatura %>" 
                    data-entity="signatures">
                    <i class="fa-solid fa-trash"></i>
                    </button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
</div>
<script>

    new DataTable('#signatures', {
        layout: {
   
            topStart: {
                buttons:  [

                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel-o"></i> Excel',
                        titleAttr: 'Excel'
                    },

                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i> PDF',
                        titleAttr: 'PDF'
                    }
                ]
            }
        }
        
    });
    </script>
