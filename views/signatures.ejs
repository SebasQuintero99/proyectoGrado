<script>
document.addEventListener('DOMContentLoaded', function () {
    const signatureModal = document.getElementById('signatureModal');
    const signatureForm = document.getElementById('signatureForm');
    const modalTitle = document.getElementById('signatureModalLabel');
    const submitButton = document.getElementById('submitButton');
    const hiddenIdInput = document.getElementById('id_asignatura');

    // Función para resetear el formulario para "Agregar"
    const setupAddForm = () => {
        signatureForm.reset();
        signatureForm.action = '/signatures/add';
        modalTitle.textContent = 'Agregar Asignatura';
        submitButton.textContent = 'Agregar';
        submitButton.className = 'btn btn-success';
        hiddenIdInput.value = '';
    };

    // Abrir modal para agregar
    document.getElementById('addSignatureBtn')?.addEventListener('click', setupAddForm);

    // Delegar el evento a la tabla completa ('#signatures') para máxima compatibilidad
    $('#signatures').on('click', '.edit-btn', async function () {
        const signatureId = $(this).data('id');

        // Configurar el formulario para "Editar"
        signatureForm.reset();
        signatureForm.action = '/signatures/update';
        modalTitle.textContent = 'Editar Asignatura';
        submitButton.textContent = 'Actualizar';
        submitButton.className = 'btn btn-warning';
        hiddenIdInput.value = signatureId;

        // Obtener datos de la asignatura vía API
        try {
            const response = await fetch(`/api/signatures/${signatureId}`, {
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem('token')}`
                }
            });

            if (!response.ok) {
                // Si la respuesta no es OK, leemos el texto del error para depurar
                const errorText = await response.text();
                console.error('Respuesta de error del servidor:', errorText);
                throw new Error(`Error al obtener los datos. Estado: ${response.status}`);
            }

            const data = await response.json();

            // Poblar el formulario
            document.getElementById('nombre').value = data.nombre;
            document.getElementById('grupo').value = data.grupo;
            document.getElementById('codigo_materia').value = data.codigo_materia;
            document.getElementById('numero_curso').value = data.numero_curso;
            document.getElementById('numero_creditos').value = data.numero_creditos;
            document.getElementById('semestre').value = data.semestre;
            document.getElementById('id_programa').value = data.id_programa;
            document.getElementById('id_docente').value = data.id_docente;

        } catch (error) {
            console.error('Error detallado al cargar datos para editar:', error);
            Swal.fire('Error', 'No se pudieron cargar los datos. Revisa la consola del navegador para más detalles.', 'error');
        }
    });

    // Manejar el envío del formulario con SweetAlert
    signatureForm.addEventListener('submit', function (event) {
        event.preventDefault(); // Prevenir el envío inmediato

        const isUpdate = !!hiddenIdInput.value;
        const title = isUpdate ? '¡Actualizado!' : '¡Agregado!';
        const text = isUpdate ? 'La asignatura ha sido actualizada correctamente.' : 'La asignatura ha sido agregada correctamente.';

        Swal.fire({
            title: title,
            text: text,
            icon: 'success',
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false,
            allowOutsideClick: false,
            allowEscapeKey: false
        }).then((result) => {
            if (result.dismiss === Swal.DismissReason.timer) {
                signatureForm.submit();
            }
        });
    });
});
</script>
